{
  "name": "idena-js",
  "version": "1.0.20",
  "description": "Idena JS Library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run format && npm ci && tsc -d --declarationMap",
    "test": "ava --verbose tests/**/* --timeout=2m",
    "format": "prettier-standard --format"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idena-dev/idena-js.git"
  },
  "devDependencies": {
    "@types/node": "^13.11.0",
    "@types/request-promise": "^4.1.46",
    "ava": "^3.6.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "pre-commit": "^1.2.2",
    "prettier-standard": "^16.3.0"
  },
  "dependencies": {
    "ethers": "^4.0.46",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "rlp": "^2.2.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "pre-commit": [
    "format"
  ]
}
