{
  "name": "idena-js",
  "version": "1.1.0",
  "description": "Idena JS Library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && npm run format && npm ci && tsc -d --declarationMap",
    "test": "ava --verbose tests/*-tests.ts --timeout=2m",
    "test:browser": "webpack-dev-server",
    "format": "prettier-standard --format"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idena-dev/idena-js.git"
  },
  "devDependencies": {
    "@types/jquery": "^3.3.38",
    "@types/node": "^13.11.0",
    "@types/request-promise": "^4.1.46",
    "ava": "^3.6.0",
    "html-webpack-plugin": "^4.3.0",
    "jquery": "^3.5.1",
    "pre-commit": "^1.2.2",
    "prettier-standard": "^16.3.0",
    "ts-loader": "^7.0.4",
    "ts-node": "^8.8.2",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@ledgerhq/devices": "^5.15.0",
    "@ledgerhq/hw-transport-webhid": "^5.15.0",
    "@ledgerhq/logs": "^5.15.0",
    "@stablelib/utf8": "^1.0.0",
    "ethereum-hdwallet": "0.0.26",
    "ethers": "^4.0.46",
    "python-struct": "^1.1.3",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "rlp": "^2.2.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "pre-commit": [
    "format"
  ]
}
